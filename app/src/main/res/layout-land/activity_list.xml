<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_list"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout android:id="@+id/listHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout android:id="@+id/listScrollViewFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1.0" />
    <EditText android:id="@+id/bemerkungenEditText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_activity_margin"
        android:layout_marginRight="@dimen/list_activity_margin"
        android:maxLines="5"
        android:ems="10"
        android:inputType="text|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:textSize="@dimen/popup_fragment_text_size"
            android:id="@+id/checkAllButton"
            android:background="@drawable/round_button_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkAllButtonText"
            android:layout_weight="1.0"
            android:onClick="onClick" />
        <Button android:textSize="@dimen/popup_fragment_text_size"
            android:id="@+id/bemerkungenButton"
            android:background="@drawable/round_button_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bemerkungenButtonText"
            android:layout_weight="1.0"
            android:onClick="onClick" />
        <Button android:textSize="@dimen/popup_fragment_text_size"
            android:id="@+id/submitButton"
            android:background="@drawable/round_button_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitButtonText"
            android:layout_weight="1.0"
            android:onClick="onClick" />
    </LinearLayout>
</LinearLayout>
