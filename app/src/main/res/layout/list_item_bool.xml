<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/boolListItem"
    android:background="@color/transparent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/list_activity_text_size"
        android:id="@+id/boolTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginStart="@dimen/list_activity_margin" />
    <CheckBox android:id="@+id/boolCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:layout_marginEnd="@dimen/list_activity_margin" />
</LinearLayout>
